<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/general_16"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="@dimen/margin_bottom_primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/summary"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_primary_text" />

            <TextView
                android:id="@+id/textAppInfo"
                android:layout_marginBottom="@dimen/margin_bottom_primary_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_secondary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_info"/>

            <TextView
                android:id="@+id/textAppRights"
                android:textSize="@dimen/size_secondary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</merge>