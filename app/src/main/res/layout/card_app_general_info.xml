<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="@dimen/general_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/general_16">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simpleDraweeImgCard"
                android:layout_width="@dimen/size_img_card_app"
                android:layout_height="@dimen/size_img_card_app"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/textAppCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_primary_text"
                android:text="@string/no_category"
                android:textSize="@dimen/size_secondary_text" />

            <TextView
                android:id="@+id/textAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textAppCategory"
                android:layout_marginBottom="@dimen/margin_bottom_primary_text"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/no_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_primary_text"
                android:layout_toLeftOf="@+id/simpleDraweeImgCard"
                android:layout_toStartOf="@+id/simpleDraweeImgCard" />

            <TextView
                android:id="@+id/textAppAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonGetApp"
                android:layout_below="@+id/simpleDraweeImgCard"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/no_author"
                android:textColor="@android:color/black"
                android:layout_toLeftOf="@+id/simpleDraweeImgCard"
                android:layout_toStartOf="@+id/simpleDraweeImgCard" />

            <Button
                android:id="@+id/buttonGetApp"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:text="@string/free"
                android:textColor="@color/blue_500" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</merge>